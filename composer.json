{
    "name": "mvchn/refactoring-php",
    "description": "Refactoring PHP",
    "type": "project",
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
      "php": ">=8.1.0"
    },
    "require-dev": {
      "phpunit/phpunit": "^9.6"
    },
    "autoload": {
      "psr-4": {
        "App\\": "src/"
      }
    },
    "autoload-dev": {
      "psr-4": {
        "App\\Tests\\": "tests/"
      }
    },
    "scripts": {
      "tests": [
        "php vendor/bin/phpunit tests"
      ]
    }
}
